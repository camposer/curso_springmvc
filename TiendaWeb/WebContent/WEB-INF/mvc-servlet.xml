<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"	
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:annotation-config/> <!-- Definiendo configuraci칩n por anotaciones -->
	<context:spring-configured/> <!-- Definiendo clases normales para que usen spring, soporte: @Autowired -->
	
	<context:component-scan 
		base-package="es.indra.formacion.springmvc.controller"/>

	<!-- BEGIN: i18n -->
	<!-- Define d칩nde estar치n los messages.properties -->
	<!-- Requerido -->	
	<bean id="messageSource"
	    class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
	    <property name="basename" value="classpath:messages" />
	    <property name="defaultEncoding" value="ISO-8859-1" />
	</bean>

	<!-- Define la variable de i18n -->	 
	<bean id="localeChangeInterceptor" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
	    <property name="paramName" value="lang" />
	</bean>
	 
	<!-- Permite modificar el lenguaje din치micamente por URL --> 
	<bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
	    <property name="defaultLocale" value="es"/>
	</bean>

	<!-- Este es el interceptor que activa la i18n!! -->	 
	<!-- Requerido -->
	<bean id="handlerMapping"
	    class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
	    <property name="interceptors">
	        <ref bean="localeChangeInterceptor" />
	    </property>
	</bean>
	<!-- END: i18n -->	
	
</beans>